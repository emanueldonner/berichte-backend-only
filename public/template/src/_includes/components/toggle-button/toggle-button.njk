{% macro toggleButton(settings) %}
  <div class="wm-toggle-btn" data-wm-toggle-btn>
    <span id="{{ settings.text | slug }}">{{ settings.text }}</span>
    <button class="wm-toggle-btn__button" role="switch" aria-checked="false" aria-labelledby="{{ settings.text | slug }}"></button>
  </div>
{% endmacro %}
