{# ---
# Parameter row(richText)
richText: "boolean" # wm-rich-text Klasse zuweisen
layout: "boolean" # Mehrere Spalten nebeneinander darstellen
class: "string" # CSS-Klasse

# Anwendung row()
{% from "components/row/row.njk" import row with context %}

{% call row(true) %}
  Inhalt frei wählbar
{% endcall %}
--- #}

{% macro row(richText = true, layout = false, class) %}
  <div class="wm-row{% if richText == true %} wm-rich-text{% endif %} {{ class }}">
    {% if layout %}
      {{ caller() }}
    {% else %}
      <div class="wm-block">
        {{ caller() }}
      </div>
    {% endif %}
  </div>
{% endmacro %}

{% macro col(class) %}
  <div class="wm-block {{ class }}">
    {{ caller() }}
  </div>
{% endmacro %}
